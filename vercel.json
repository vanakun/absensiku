{
    "version": 2,
    "name": "laravel-app",
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "/public/index.php"
        },
        {
            "src": "/(.*)",
            "dest": "/public/index.php"
        }
    ],
    "env": {
        "APP_ENV": "production",
        "APP_DEBUG": "false",
        "APP_KEY": "@app_key",
        "APP_URL": "https://your-vercel-app-url",
        "DB_CONNECTION": "@db_connection",
        "DB_HOST": "@db_host",
        "DB_PORT": "@db_port",
        "DB_DATABASE": "@db_database",
        "DB_USERNAME": "@db_username",
        "DB_PASSWORD": "@db_password"
    }
}
